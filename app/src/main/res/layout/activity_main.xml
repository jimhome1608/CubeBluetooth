<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:weightSum="100" >



        <TableRow
                android:layout_width="match_parent"
                android:layout_height="51dp" android:weightSum="1" android:orientation="vertical"
                >
            <Button android:id="@+id/bConnect" android:layout_width="100dp" android:layout_height="40dp"
                    android:text="CONNECT" android:textSize="12dp" android:textColor="@color/white"
                    android:singleLine="false"/>
            <Space
                    android:layout_width="112dp"
                    android:layout_height="match_parent"
                    />
            <Button android:id="@+id/btnCLEAR" android:layout_width="100dp" android:layout_height="40dp"
                    android:textSize="10dp" android:textColor="@color/white" android:background="#ff6b0d11" android:text="clear"/>
        </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="64dp" android:weightSum="1" android:orientation="vertical"
            android:layout_weight="14.48">
        >
        <TextView
                android:id="@+id/tvLeft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:text="Bluetooth"
                android:textSize="15dp"
                android:textColor="@color/red" android:password="false"/>
    </TableRow>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="62.18">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y+"
                android:id="@+id/btnYplus" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                android:layout_marginTop="31dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y-"
                android:id="@+id/btnYminus"
                android:layout_centerVertical="true" android:layout_alignLeft="@+id/btnYplus"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X+"
                android:id="@+id/btnXplus" android:layout_above="@+id/btnYminus" android:layout_toRightOf="@+id/btnYminus"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X-"
                android:id="@+id/btnXminus" android:layout_below="@+id/btnYplus" android:layout_toLeftOf="@+id/btnYplus"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Z-"
                android:id="@+id/btnZminus" android:layout_below="@+id/btnYminus" android:layout_alignParentLeft="true"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Z+"
                android:id="@+id/btnZplus" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"/>
    </RelativeLayout>


</LinearLayout>